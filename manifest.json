{
  "manifest_version": 2,
  "name": "Webpage Text Highlighter",
  "version": "1.0",
  "description": "Highlights specified words in webpage body",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}